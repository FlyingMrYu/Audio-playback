<template>
  <div>
    <div class="custom-audio clearfix">
      <div>
        <!-- 播放 -->
        <div class="audio-item play" @click="play" v-if="!audio.playing">
          <i class="iconfont iconbofang1"></i>
        </div>
        <!-- 暂停 -->
        <div class="audio-item play" @click="pause" v-if="audio.playing">
          <i class="iconfont iconbofang"></i>
        </div>
        <!-- 流动时间 -->
        <div class="audio-item play-time">{{ audio.currentTime | formatSecond}}</div>
        <div class="audio-item progress">
          <el-slider
            v-model="audio.currentTime"
            :format-tooltip="realFormatSecond"
            :max="audio.maxTime"
          ></el-slider>
        </div>
        <!-- 总时间 -->
        <div class="audio-item total-time">{{ audio.maxTime | formatSecond}}</div>
        <!-- 速度 -->
        <SelectInput :speedList="speedList"></SelectInput>
      </div>
    </div>
  </div>
</template>

<script>
function realFormatSecond(second) {
  var secondType = typeof second;
  if (secondType === "number" || secondType === "string") {
    second = parseInt(second);
    var hours = Math.floor(second / 3600);
    second = second - hours * 3600;
    var mimute = Math.floor(second / 60);
    second = second - mimute * 60;
    return ("0" + mimute).slice(-2) + ":" + ("0" + second).slice(-2);
  } else {
    return "00:00";
  }
}
import SelectInput from "./selct-input";
export default {
  name: "CustomAudio",
  data() {
    return {
      speedList: [20, 15, 10, 8, 6, 4, 2],
      audio: {
        // 播放状态
        playing: false,
        // 音频当前播放时长
        currentTime: 0,
        // 音频最大播放时长
        maxTime: 5,
      },
      speed: 1000,
    };
  },
  components: { SelectInput },
  methods: {
    // 播放音频
    play() {
      this.audio.playing = true;
      if (this.audio.currentTime == this.audio.maxTime) {
        this.audio.currentTime = 0;
      }
      this.getUpTime();
    },
    // 暂停音频
    pause() {
      this.audio.playing = false;
      this.getUpTime("close");
    },
    // 拖动进度滚动条
    progressChange(val) {
      //   console.log(val, 32);
    },
    // 更新时间
    getUpTime(close) {
      var _that = this;
      if (close) {
        clearInterval(this.timeSet);
        this.timeSet = null;
        return;
      }
      this.timeSet = setInterval(() => {
        _that.onTimeupdate(close);
      }, _that.speed);
    },
    // 当timeupdate事件大概每秒一次，用来更新音频流的当前播放时间
    onTimeupdate(close) {
      console.log(
        this.audio.currentTime == this.audio.maxTime,
        "this.audio.currentTime"
      );
      if (this.audio.currentTime == this.audio.maxTime) {
        clearInterval(this.timeSet);
        this.timeSet = null;
        return;
      }
      let currentTime = this.audio.currentTime;
      currentTime++;
      this.audio.currentTime = currentTime;
      if (this.audio.currentTime == this.audio.maxTime) {
        this.audio.playing = false;
      }
      console.log(this.audio.currentTime, "this.audio.currentTime111");
      console.log("             ");
    },
  },
  filters: {
    // 将整数转化成时分秒
    formatSecond(second = 0) {
      return realFormatSecond(second);
    },
  },
};
</script>

